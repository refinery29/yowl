#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), "..", "lib")
require 'rubygems'
require 'getoptlong'
require 'dowl'
require 'erb'

PROGRAM = File::basename $0

options = DOWL::OptionsParser.parse(ARGV)
if options
  repository = DOWL::Repository.new(options)
  DOWL::Generator.new(repository, options).run()
end
