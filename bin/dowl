#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), "..", "lib")
require 'rubygems'
require 'getoptlong'
require 'dowl'
require 'erb'

PROGRAM = File::basename $0

options = DOWL::OptionsParser.parse(ARGV)
schemas = DOWL::Schema.create_from_file(options)
DOWL::Generator.new(schemas, options).run()
